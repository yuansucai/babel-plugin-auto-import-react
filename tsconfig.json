{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "include": ["src/**/*"]
}
